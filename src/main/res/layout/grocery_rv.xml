<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:backgroundTint="@color/blue_shade_2"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/idLL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">


            <TextView
                android:id="@+id/idTVItemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:padding="4dp"
                android:text="Item Name"
                android:textColor="@color/blue_shade_1"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/idTVQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:padding="4dp"
                android:text="Quantity"
                android:textColor="@color/blue_shade_1"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/idTVRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="0.5"
                android:padding="4dp"
                android:text="Rate"
                android:textColor="@color/blue_shade_1"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/idTVDelete_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="0.5"
                android:padding="4dp"
                android:src="@drawable/ic_delete_icon"
                app:tint="@color/white" />


        </LinearLayout>

        <TextView
            android:id="@+id/idTVHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idLL1"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toLeftOf="@id/idTVTotalAmt"
            android:padding="4dp"
            android:text="Total Cost"
            android:textColor="@color/blue_shade_1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTVTotalAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_shade_1"
            android:layout_below="@id/idLL1"
            android:layout_alignParentEnd="true"
            android:text="Amount"
            android:padding="4dp"
            android:layout_margin="3dp"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:textStyle="bold"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>